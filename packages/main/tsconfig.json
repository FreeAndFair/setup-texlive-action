{
  "extends": "@setup-texlive-action/config/tsconfig",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "#/*": ["*", "*.js", "*/index.js"],
    },
    "rootDir": "./src",
    "outDir": "./lib",
    "experimentalDecorators": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
  },
  "files": [
    "./src/types.d.ts",
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.json",
  ],
  "references": [
    { "path": "../polyfill" },
  ],
}
