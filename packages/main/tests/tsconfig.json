    "allowArbitraryExtensions": true,
    "composite": true,
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.json",
    "./**/*.ts",
  ],
  "references": [
    { "path": "../../polyfill" },
    { "path": "../../utils" },
  ],
}
